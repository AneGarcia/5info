<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Mostra Usuarios</title>
</head>
<body class="bg-primary">
    <div class="container bg-body-secondary">
        <div class="row">
            <div class="col">
                <h2 class="text-center p-4">Cadastro de Usuários</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <ul class="nav flex-column">
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/mostrausuarios">Listar usuários</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/usuario">Adicionar usuários</a>
                    </li>
                  </ul>
            </div>
            <div class="col-10">
                <form method="post">
                    <div class="form-floating">
                        <input class="form-control" placeholder="Pesquisar" type="search" name="pesquisar" id="search">
                        <label class="form-label" for="search">Pesquisar</label>
                    </div>

                    <div>
                        <input class="btn btn-outline-primary" type="submit" value="Pesquisar">
                    </div>
                    </form>
                <table class="table table-hover">
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Foto</th>
                        <th>Editar</th>
                        <th>Deletar</th>
                    </tr>
                    <% Usuarios.forEach(function (usuario){%>
                        <tr>
                            <td><%=usuario.nome%></td>
                            <td><%=usuario.email%></td>
                            <td><img class="img-thumbnail" src="/<%=usuario.foto%>" width="200px" alt="Foto de perfil"></td>
                            <td>
                                <a href="/editarusuario/<%=usuario.id%>">Editar</a>
                            </td>
                            <td>
                                <a href="/deletarusuario/<%=usuario.id%>">Deletar</a>
                            </td>
                        </tr>
                    <%})%>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>